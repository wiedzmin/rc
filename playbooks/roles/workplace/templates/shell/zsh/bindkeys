bindkey -e
bindkey . dot
bindkey ' ' magic-space # also do history expansion on space

bindkey "\e[3~" delete-char

zle -N fbr
bindkey "^]c" fbr
zle -N fco
bindkey "^]t" fco
zle -N fcoc
bindkey "^]l" fcoc
zle -N fshow
bindkey "^]s" fshow
zle -N fzf-history-widget
bindkey "^R" fzf-history-widget

zle -N jump
bindkey "^xjj" jump

# NOTE: it looks like encapsulation violation but
# previous code stopped working for some reason,
# most likely because of zsh plugins setup changes
zle -N __enhancd::cd
bindkey "^xd" __enhancd::cd

bindkey -r "^g"

bindkey "^qs" fuzzy-search-and-edit
zle -N fe
bindkey "^qe" fe

# Use C-x C-e to edit the current command line, http://nuclearsquid.com/writings/edit-long-commands/
autoload -U edit-command-line
zle -N edit-command-line
bindkey '\C-x\C-e' edit-command-line
bindkey '\C-xe' edit-command-line
# Emacs style
# bindkey '^xe' edit-command-line
# bindkey '^x^e' edit-command-line
