dzen2.font: {{ xft_font_current.name }}{% if xft_font_current.is_bold %}:{{ xft_font_current.bold_keyword }}=Bold{% endif %}:size={{ xft_font_size_app }}

Xmessage*faceName: {% for part in xft_font_current.name.split(' ') -%}{{ part }}{%- endfor %}

{% if xft_font_current.is_bold %}Xmessage*faceWeight: bold{% endif %}

Xmessage*faceSize: {{ xft_font_size_app }}

Xmessage*background:            #3c3c3c
Xmessage*foreground:            #c2c2c2
Xmessage*form.*.shapeStyle:     rectangle
Xmessage*Scrollbar.width:       1
Xmessage*Scrollbar.borderWidth: 0
Xmessage*Buttons:               Quit
Xmessage*defaultButton:         Quit
Xmessage*international:         true
