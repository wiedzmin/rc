bindkey -e
bindkey . dot
bindkey ' ' magic-space # also do history expansion on space

zle -N fbr
bindkey "^]c" fbr
zle -N fco
bindkey '^]t' fco
zle -N fcoc
bindkey '^]l' fcoc
zle -N fshow
bindkey '^]s' fshow
zle -N fzf-history-widget
bindkey '^R' fzf-history-widget

zle -N jump
bindkey '^xjj' jump

zle -N cd::cd
bindkey '^xd' cd::cd

bindkey -r '^g'

bindkey 'j' zshnip-expand-or-edit
bindkey 'e' zshnip-edit-and-expand
